{% extends 'base.j2' %}

{% block content %}

<div class="row">
	<div class="col-md-12 col-lg-6">
		<div class="card bg-light score-card">
			<span class="card-header">Current Scores:</span>
			<div class="card-body scores">
				<div class="card-text">
					Backrest Score: <span class="cur back-score">22</span>
					<span style="padding-left: 3em">Seat Score: <span class="cur seat-score">25</span></span>
				</div>
				<div>
					Overall: <span class="cur overall overall-good">Good Posture</span>
				</div>
				<div>
					Feedback: <span class="cur feedback">Looking Good!</span>
				</div>
			</div>
		</div>
	</div>
	<div class="col-md-12 col-lg-6">
		<div class="card bg-light score-card">
			<span class="card-header">
				Average Scores From The Last
				<select class="select2">
					<option value="5">5</option>
					<option value="15">15</option>
					<option value="30">30</option>
					<option value="60">60</option>
				</select>
				Minutes:
			</span>
			<div class="card-body scores">
				
				<div>
					Backrest Score: <span class="avg back-score">22</span>
					<span style="padding-left: 3em">Seat Score: <span class="avg seat-score">25</span></span>
				</div>
				<div>
					Overall: <span class="avg overall overall-bad">Bad Posture</span>
				</div>
				<div>
					Feedback: <span class="avg feedback">Your lower back is against the backrest but your upper back is not, which suggests hunching over.</span>
				</div>
			</div>
		</div>
	</div>
</div>
<div class="row">
	<div class="col-md-12 col-lg-6">
		<div class="card bg-light text-center chair-card">
			<span class="card-header">Current Pressue Readings (Volts)</span>
			<div class="card-body">
				<div class="chair-container">
					{# TODO these styles are NOT responsive currently #}

					{# left/right based on sitting on the seat and facing forward #}
					<span class="cur pressure back-right-pressure">1.0</span>
					<span class="cur pressure back-bottom-pressure">2.0</span>
					<span class="cur pressure seat-right-pressure">3.0</span>
					<img src="/static/images/line-chair.png" class="chair-img">
					<span class="cur pressure back-left-pressure">4.0</span>
					<span class="cur pressure seat-rear-pressure">5.0</span>
					<span class="cur pressure seat-left-pressure">6.0</span>
				</div>
			</div>
		</div>
	</div>
	<div class="col-md-12 col-lg-6">
		<div class="card bg-light text-center chair-card">
			<span class="card-header">Average Pressue Readings (Volts)</span>
			<div class="card-body">
				<div class="chair-container">
					{# TODO these styles are NOT responsive currently #}

					{# left/right based on sitting on the seat and facing forward #}
					<span class="avg pressure back-right-pressure">1.0</span>
					<span class="avg pressure back-bottom-pressure">2.0</span>
					<span class="avg pressure seat-right-pressure">3.0</span>
					<img src="/static/images/line-chair.png" class="chair-img">
					<span class="avg pressure back-left-pressure">4.0</span>
					<span class="avg pressure seat-rear-pressure">5.0</span>
					<span class="avg pressure seat-left-pressure">6.0</span>
				</div>
			</div>
		</div>
	</div>
</div>

{% endblock %}
